doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Room
        link(rel="stylesheet",href="https://unpkg.com/mvp.css")
    body 
        header
            h1 Room
        main
            div#welcome
                form#name
                    input(placeholder="nickname", type="text", required)
                    button Save
                form#roomForm
                    input(placeholder="room name", type="text", required)
                    button Enter Room           
                h4 Open Rooms: 
                ul
            div#call
                div#myStream
                    video#myFace(autoplay,playsinline, width="500",height="500")
                    button#mute Mute
                    button#camera Camera Off
                    select#cameras
            div#room
                h3
                ul 
                form#msg
                    input(placeholder="message", type="text", required)
                    button Send  

        script(src="/socket.io/socket.io.js")
        script(src="/public/js/app.js")
